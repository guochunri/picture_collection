<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 user_setup_content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-sign-in"></span> 登录 </h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => "邮箱：", placeholder: "邮箱地址", required: false, autofocus: true %>
          <%= f.input :password, :label => "密码：", placeholder: "请输入密码", required: false %>
          <%= f.input :remember_me, :label => "记住我", as: :boolean if devise_mapping.rememberable? %>
          <!-- <%= link_to "忘记密码", new_password_path(resource_name), class: "psw" %> -->
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登录",class: "button" %>
        </div>
      <% end %>
      <hr />
        <!-- <div class="account">
          <%= link_to "现在就加入 巨会养车", new_registration_path(resource_name) %>
        </div> -->
      </div>
    </div>
  </div>
</div>
