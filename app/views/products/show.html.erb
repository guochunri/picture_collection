<div class="container common-block">
  <div class="row">
    <div class="product-information">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @product.user.name %></h3>
        </div>
        <div class="panel-body">
          <p><%= t('f-product-name')%>：<%= @product.name.upcase %></p>
          <p><%= t('f-product-number')%>：<%= @product.number %> 副</p>
          <p><%= t('f-product-description')%>：<%= simple_format(@product.description) %></p>
          <p><%= t('f-product-category_group')%>：<%= @product.category.category_group.name %>
            -
            <%= @product.category.name %></p>
          <p><%= t('f-procuct-status')%>：<%= t(@product.aasm_state, :scope => "product.aasm_state") %></p>
          <% if current_user && current_user == @product.user && @product.aasm_state == "waitting_for_approval" || @product.aasm_state == "rejected" || @product.aasm_state == "final_rejected" %>
            <%= link_to(t('btn-edit'), edit_product_path(@product), class: "btn btn-primary pull-right")%>
          <% end %>
        </div>
        <div class="panel-footer">
          <h6><%= @product.created_at.strftime("%Y/%m/%d %I:%M %p") %></h6>
        </div>
      </div>
    </div>
  </div>
  <!-- 商品图片 -->
  <div class="row">
    <% if @product_images.present? %>

      <% @product_images.each_with_index do |p| %>
      <!-- 显示所有商品图片 -->
        <div class='col-xs-12 col-sm-6 col-md-3 '>
          <!-- 精选样章 -->
          <% if p.is_chosen %>
            <div class="chosen-box"><%= t('product-chosen') %></div>
          <% end %>
          <!-- 精选样章 -->
            <%= image_tag(p.image.url, {:modal => "zoomImg", :class => 'list-image'}) %>
        </div>
      <% end %>

    <% else %>
      <%= image_tag('http://placehold.it/400x400&text=No Pic', class: 'thumbnail') %>
    <% end %>
  </div>



  <div class="col-md-12">
    <div class="row">
      <div id="comments">
          <h5>共收到 <%= @product.comments.count%> 条回复</h5>
          <%= render @product.comments %>

          <h3> 回帖 </h3>
          <%= render 'comments/form'%>
      </div>
    </div>
  </div>
</div>
