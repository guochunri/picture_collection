<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <!--=== 页面标题 ===-->
    <h2><%= t('category-group-index') %></h2>

    <!--=== 新增类型 ===-->
    <div class="pull-right">
      <%= link_to(t('btn-category-group-new'), new_admin_category_group_path, :class => 'btn btn-md btn-info')%>
    </div>

    <!--=== 类型列表 ===-->
    <table class="table">
      <!--=== 类型列表标题 ===-->
      <thead>
        <tr>
          <th><%= t('f-category-group') %></th>
          <th><%= t('f-CustomerManager') %></th>
          <th class="pull-right"><%= t('f-options') %></th>
        </tr>
      </thead>
      <!--=== 类型列表內容 ===-->
      <% @category_groups.each do |category_group| %>
        <tr>
          <td><%= render_category_group_status(category_group) %> <%= category_group.name %></td>

          <td><%= category_group.user.name %> (<%= category_group.user.email %>)</td>

          <!--=== 操作选项 ===-->
          <td class="action-box pull-right">
            <%= link_to(edit_admin_category_group_path(category_group), class: "btn btn-md btn-default") do %>
              <span class="fa fa-pencil"></span>
            <% end %>

            <!-- 发布 / 隐藏 -->
            <!-- <%= render_category_group_publish_or_hide(category_group) %> -->
            <% if category_group.is_hidden %>
              <%= link_to(publish_admin_category_group_path(category_group), :method => :post, class: "btn btn-md btn-default show-btn") do %>
                <span class="fa fa-eye"></span>
              <% end %>
            <% else %>
              <%= link_to(hide_admin_category_group_path(category_group), :method => :post, data: { confirm: "确定隐藏該类型？" }, class: "btn btn-md btn-default") do %>
                <span class="fa fa-eye-slash"></span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>

    <!--=== 页面标题 ===-->
    <h2><%= t('category-index') %></h2>

    <!--=== 新增分类 ===-->
    <div class="pull-right">
      <%= link_to(t('btn-category-new'), new_admin_category_path, :class => 'btn btn-md btn-info')%>
    </div>

    <!--=== 分类列表 ===-->
    <table class="table">
      <!--=== 分类列表标题 ===-->
      <thead>
        <tr>
          <th><%= t('f-category-group') %></th>
          <th><%= t('f-category-name') %></th>
          <th><%= t('f-CustomerOperator') %></th>
          <th class="pull-right"><%= t('f-options') %></th>
        </tr>
      </thead>

      <!--=== 分类列表內容 ===-->
      <% @categories.each do |category| %>
        <tr>
          <td><%= render_category_status(category) %> <%= category.category_group.name %></td>
          <td><%= category.name %></td>
          <td><%= category.user.name %>(<%= category.user.email %>) </td>
          <!--=== 操作选项 ===-->
          <td class="action-box pull-right">
            <%= link_to(edit_admin_category_path(category), class: "btn btn-md btn-default") do %>
              <span class="fa fa-pencil"></span>
            <% end %>
            <%= link_to(admin_category_path(category), class: "btn btn-md btn-default", :method => :delete, :data => { :confirm => "Are you sure?" }) do%>
            <span class="fa fa-trash"></span>
            <% end %>
            <!-- 发布 / 隐藏 -->
            <!-- <%= render_category_publish_or_hide(category) %> -->
            <!-- <% if category.is_hidden %>
              <%= link_to(publish_admin_category_path(category), :method => :post, class: "btn btn-md btn-default show-btn") do %>
                <span class="fa fa-eye"></span>
              <% end %>
            <% else %>
              <%= link_to(hide_admin_category_path(category), :method => :post, data: { confirm: "確定隐藏該分类？" }, class: "btn btn-md btn-default") do %>
                <span class="fa fa-eye-slash"></span>
              <% end %>
            <% end %> -->
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
