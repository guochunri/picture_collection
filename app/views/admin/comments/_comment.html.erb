<div class="comment clearfix">
  <div class="content">
    <h4><%= simple_format(comment.comment) %></h4>
    <br>
    <p class="signature"><%= comment.user.name %> <%= comment.created_at.strftime("%Y/%m/%d %I:%M %p") %></p>
  </div>
  <div class="buttons">
    <%= link_to t('btn-edit'), edit_admin_product_comment_path(comment.product, comment)%>
    <%= link_to t('btn-delete'), [:admin, comment.product, comment], method: :delete, data: { confirm: "Are you sure?" }%>
  </div>
</div>
